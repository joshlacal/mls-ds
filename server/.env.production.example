# Production Environment Configuration
# WARNING: Never commit this file to version control!

# PostgreSQL Configuration - Use strong passwords!
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
POSTGRES_USER=catbird
POSTGRES_DB=catbird

# Redis Configuration
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD

# Application Configuration
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET
RUST_LOG=info,catbird_server=debug
DATABASE_URL=postgresql://catbird:REPLACE_WITH_SECURE_PASSWORD@postgres:5432/catbird
REDIS_URL=redis://:REPLACE_WITH_SECURE_REDIS_PASSWORD@redis:6379

# Server Configuration
SERVER_PORT=3000

# Optional: External monitoring
# SENTRY_DSN=https://your-sentry-dsn
# METRICS_ENABLED=true

# Service DID for inter-service JWT aud validation
SERVICE_DID=did:web:mls.example.com
# Optional: fallback proxy target for non-local /xrpc calls
PDS_XRPC_BASE=https://bsky.social
