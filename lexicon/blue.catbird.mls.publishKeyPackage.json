{
  "lexicon": 1,
  "id": "blue.catbird.mls.publishKeyPackage",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Publish an MLS key package to enable others to add you to conversations",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["keyPackage", "cipherSuite"],
          "properties": {
            "keyPackage": {
              "type": "string",
              "description": "Base64-encoded MLS key package",
              "maxLength": 65536
            },
            "cipherSuite": {
              "type": "ref",
              "ref": "blue.catbird.mls.defs#cipherSuiteEnum",
              "description": "Cipher suite of the key package"
            },
            "expiresAt": {
              "type": "string",
              "format": "datetime",
              "description": "Optional expiration timestamp (defaults to 30 days)"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["keyPackage"],
          "properties": {
            "keyPackage": {
              "type": "ref",
              "ref": "blue.catbird.mls.defs#keyPackageRef",
              "description": "Published key package reference"
            }
          }
        }
      },
      "errors": [
        {
          "name": "InvalidKeyPackage",
          "description": "Key package is malformed or invalid"
        },
        {
          "name": "InvalidCipherSuite",
          "description": "Cipher suite is not supported"
        },
        {
          "name": "ExpirationTooFar",
          "description": "Expiration date is too far in the future (max 90 days)"
        },
        {
          "name": "TooManyKeyPackages",
          "description": "Maximum number of key packages per user exceeded"
        }
      ]
    }
  }
}
