{
  "lexicon": 1,
  "id": "blue.catbird.mlsChat.getKeyPackages",
  "description": "Retrieve key packages for one or more DIDs (same as v1, in v2 namespace for consistency)",
  "defs": {
    "main": {
      "type": "query",
      "description": "Retrieve key packages for one or more DIDs to add them to conversations. Returns one key package per device per DID.",
      "parameters": {
        "type": "params",
        "required": ["dids"],
        "properties": {
          "dids": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "did"
            },
            "description": "DIDs to fetch key packages for",
            "minLength": 1,
            "maxLength": 100
          },
          "cipherSuite": {
            "type": "string",
            "description": "Filter by cipher suite",
            "knownValues": [
              "MLS_128_DHKEMX25519_AES128GCM_SHA256_Ed25519",
              "MLS_128_DHKEMP256_AES128GCM_SHA256_P256",
              "MLS_128_DHKEMX25519_CHACHA20POLY1305_SHA256_Ed25519",
              "MLS_256_DHKEMX448_AES256GCM_SHA512_Ed448",
              "MLS_256_DHKEMP521_AES256GCM_SHA512_P521",
              "MLS_256_DHKEMX448_CHACHA20POLY1305_SHA512_Ed448"
            ]
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["keyPackages"],
          "properties": {
            "keyPackages": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "blue.catbird.mlsChat.defs#keyPackageRef"
              },
              "description": "Available key packages for the requested DIDs"
            },
            "missing": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "did"
              },
              "description": "DIDs for which no key packages were found"
            }
          }
        }
      },
      "errors": [
        {"name": "TooManyDids", "description": "Too many DIDs requested (max 100)"},
        {"name": "InvalidDid", "description": "One or more DIDs are invalid"}
      ]
    }
  }
}
