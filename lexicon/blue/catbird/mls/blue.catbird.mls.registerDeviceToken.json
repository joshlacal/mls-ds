{
  "lexicon": 1,
  "id": "blue.catbird.mls.registerDeviceToken",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Register or update a device push token for APNs.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["deviceId", "pushToken"],
          "properties": {
            "deviceId": {
              "type": "string",
              "description": "Unique identifier for the device"
            },
            "pushToken": {
              "type": "string",
              "description": "Hex-encoded APNs device token"
            },
            "deviceName": {
              "type": "string",
              "description": "Human-readable device name"
            },
            "platform": {
              "type": "string",
              "knownValues": ["ios", "android", "web"]
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["success"],
          "properties": {
            "success": { "type": "boolean" }
          }
        }
      }
    }
  }
}
