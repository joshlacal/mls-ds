{
  "lexicon": 1,
  "id": "blue.catbird.mls.getChatRequestSettings",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get user's chat request settings",
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["allowFollowersBypass", "allowFollowingBypass", "autoExpireDays"],
          "properties": {
            "allowFollowersBypass": {
              "type": "boolean",
              "description": "Allow users you follow to bypass request system",
              "default": true
            },
            "allowFollowingBypass": {
              "type": "boolean",
              "description": "Allow users who follow you to bypass request system",
              "default": false
            },
            "autoExpireDays": {
              "type": "integer",
              "minimum": 1,
              "maximum": 30,
              "default": 7,
              "description": "Days until pending requests auto-expire"
            }
          }
        }
      }
    }
  }
}
