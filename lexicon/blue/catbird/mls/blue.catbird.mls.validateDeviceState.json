{
  "lexicon": 1,
  "id": "blue.catbird.mls.validateDeviceState",
  "defs": {
    "main": {
      "type": "query",
      "description": "Validate device state and sync status for the authenticated user",
      "parameters": {
        "type": "params",
        "properties": {
          "deviceId": {
            "type": "string",
            "description": "Optional device ID to validate; defaults to current device"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["isValid", "issues", "recommendations"],
          "properties": {
            "isValid": {
              "type": "boolean",
              "description": "Overall validation status"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of detected issues"
            },
            "recommendations": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Actionable recommendations to fix issues"
            },
            "expectedConvos": {
              "type": "integer",
              "description": "Number of conversations device should be member of"
            },
            "actualConvos": {
              "type": "integer",
              "description": "Number of conversations device is actually member of"
            },
            "keyPackageInventory": {
              "type": "ref",
              "ref": "#keyPackageInventory"
            },
            "pendingRejoinRequests": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of conversation IDs with pending rejoin requests"
            }
          }
        }
      }
    },
    "keyPackageInventory": {
      "type": "object",
      "required": ["available", "target", "needsReplenishment"],
      "properties": {
        "available": {
          "type": "integer",
          "description": "Number of available key packages"
        },
        "target": {
          "type": "integer",
          "description": "Target threshold for key packages"
        },
        "needsReplenishment": {
          "type": "boolean",
          "description": "Whether more key packages need to be uploaded"
        },
        "perDeviceCount": {
          "type": "integer",
          "description": "Key packages available per device"
        }
      }
    }
  }
}
