{
  "lexicon": 1,
  "id": "blue.catbird.mls.processExternalCommit",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Process an external commit for a conversation. This allows a client to add itself to a group using a cached GroupInfo.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convoId", "externalCommit"],
          "properties": {
            "convoId": {
              "type": "string",
              "description": "The conversation ID"
            },
            "externalCommit": {
              "type": "string",
              "description": "Base64 encoded serialized MLS Commit message"
            },
            "idempotencyKey": {
              "type": "string",
              "description": "Optional idempotency key to prevent duplicate commits"
            },
            "groupInfo": {
              "type": "string",
              "description": "Optional Base64 encoded serialized GroupInfo. If provided, the server will atomically update the cached GroupInfo for the conversation."
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["epoch", "rejoinedAt"],
          "properties": {
            "epoch": {
              "type": "integer",
              "description": "The new epoch number after the commit"
            },
            "rejoinedAt": {
              "type": "string",
              "format": "datetime",
              "description": "Timestamp of the rejoin"
            }
          }
        }
      },
      "errors": [
        { "name": "Unauthorized" },
        { "name": "InvalidCommit" },
        { "name": "InvalidGroupInfo" }
      ]
    }
  }
}
