{
  "lexicon": 1,
  "id": "blue.catbird.mls.optIn",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Opt in to MLS chat. Creates private server-side record.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "deviceId": {
              "type": "string",
              "description": "Device identifier for this opt-in"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["optedIn", "optedInAt"],
          "properties": {
            "optedIn": {
              "type": "boolean"
            },
            "optedInAt": {
              "type": "string",
              "format": "datetime"
            }
          }
        }
      }
    }
  }
}
