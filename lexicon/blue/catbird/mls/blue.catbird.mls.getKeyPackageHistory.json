{
  "lexicon": 1,
  "id": "blue.catbird.mls.getKeyPackageHistory",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get key package consumption history for the authenticated user",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of history entries to return",
            "default": 20,
            "minimum": 1,
            "maximum": 100
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor from previous response"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["history"],
          "properties": {
            "history": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#keyPackageHistoryEntry"
              }
            },
            "cursor": {
              "type": "string",
              "description": "Cursor for pagination; present if more results available"
            }
          }
        }
      }
    },
    "keyPackageHistoryEntry": {
      "type": "object",
      "required": ["packageId", "createdAt", "cipherSuite"],
      "properties": {
        "packageId": {
          "type": "string",
          "description": "Key package hash identifier"
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "When the key package was created"
        },
        "consumedAt": {
          "type": "string",
          "format": "datetime",
          "description": "When the key package was consumed"
        },
        "consumedForConvo": {
          "type": "string",
          "description": "Conversation ID where package was consumed"
        },
        "consumedForConvoName": {
          "type": "string",
          "description": "Name of the conversation where package was consumed"
        },
        "consumedByDevice": {
          "type": "string",
          "description": "Device ID that initiated the add operation"
        },
        "deviceId": {
          "type": "string",
          "description": "Device ID that owns this key package"
        },
        "cipherSuite": {
          "type": "string",
          "description": "MLS cipher suite identifier"
        }
      }
    }
  }
}
