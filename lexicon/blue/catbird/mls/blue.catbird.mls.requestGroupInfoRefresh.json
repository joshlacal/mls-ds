{
  "lexicon": 1,
  "id": "blue.catbird.mls.requestGroupInfoRefresh",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Request active members to publish fresh GroupInfo for a conversation. Used when a member encounters stale GroupInfo during external commit rejoin. Emits a GroupInfoRefreshRequested SSE event to all active members.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convoId"],
          "properties": {
            "convoId": {
              "type": "string",
              "description": "The conversation ID needing fresh GroupInfo"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["requested"],
          "properties": {
            "requested": {
              "type": "boolean",
              "description": "Whether the refresh request was emitted"
            },
            "activeMembers": {
              "type": "integer",
              "description": "Number of active members notified"
            }
          }
        }
      },
      "errors": [
        { "name": "Unauthorized" },
        { "name": "ConversationNotFound" }
      ]
    }
  }
}
