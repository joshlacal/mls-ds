{
  "lexicon": 1,
  "id": "blue.catbird.mls.createConvo",
  "description": "Create a new MLS conversation with optional initial members and metadata",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Create a new MLS conversation",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["groupId", "cipherSuite"],
          "properties": {
            "groupId": {
              "type": "string",
              "description": "Hex-encoded MLS group identifier",
              "maxLength": 128
            },
            "idempotencyKey": {
              "type": "string",
              "description": "Client-generated UUID for idempotent request retries. Optional but recommended."
            },
            "cipherSuite": {
              "type": "string",
              "description": "MLS cipher suite to use for this conversation",
              "knownValues": [
                "MLS_128_DHKEMX25519_AES128GCM_SHA256_Ed25519",
                "MLS_128_DHKEMP256_AES128GCM_SHA256_P256",
                "MLS_128_DHKEMX25519_CHACHA20POLY1305_SHA256_Ed25519",
                "MLS_256_DHKEMX448_AES256GCM_SHA512_Ed448",
                "MLS_256_DHKEMP521_AES256GCM_SHA512_P521",
                "MLS_256_DHKEMX448_CHACHA20POLY1305_SHA512_Ed448"
              ]
            },
            "initialMembers": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "did"
              },
              "description": "DIDs of initial members to add to the conversation",
              "maxLength": 100,
              "minLength": 0
            },
            "welcomeMessage": {
              "type": "string",
              "description": "Base64url-encoded MLS Welcome message containing encrypted secrets for ALL initial members"
            },
            "keyPackageHashes": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#keyPackageHashEntry"
              },
              "description": "Array of {did, hash} objects mapping each initial member to their key package hash. Required for multi-device support."
            },
            "metadata": {
              "type": "ref",
              "ref": "#metadataInput",
              "description": "Optional conversation metadata (name, description, avatar)"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "blue.catbird.mls.defs#convoView"
        }
      },
      "errors": [
        {
          "name": "InvalidCipherSuite",
          "description": "The specified cipher suite is not supported"
        },
        {
          "name": "KeyPackageNotFound",
          "description": "Key package not found for one or more initial members"
        },
        {
          "name": "TooManyMembers",
          "description": "Too many initial members specified (max 100)"
        }
      ]
    },
    "metadataInput": {
      "type": "object",
      "description": "Input metadata for conversation creation (text-only, no avatar)",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 128,
          "description": "Conversation display name"
        },
        "description": {
          "type": "string",
          "maxLength": 512,
          "description": "Conversation description"
        }
      }
    },
    "keyPackageHashEntry": {
      "type": "object",
      "description": "Maps a DID to the key package hash used for their Welcome message",
      "required": ["did", "hash"],
      "properties": {
        "did": {
          "type": "string",
          "format": "did",
          "description": "DID of the member"
        },
        "hash": {
          "type": "string",
          "description": "Hex-encoded SHA-256 hash of the key package used"
        }
      }
    }
  }
}
