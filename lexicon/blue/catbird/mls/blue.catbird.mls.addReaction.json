{
  "lexicon": 1,
  "id": "blue.catbird.mls.addReaction",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Add a reaction (emoji) to a message in an MLS conversation",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convoId", "messageId", "reaction"],
          "properties": {
            "convoId": {
              "type": "string",
              "description": "Conversation identifier (group ID hex)"
            },
            "messageId": {
              "type": "string",
              "description": "ID of the message to react to"
            },
            "reaction": {
              "type": "string",
              "description": "Reaction content (emoji or short code)",
              "maxLength": 16
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["success"],
          "properties": {
            "success": {
              "type": "boolean",
              "description": "Whether the reaction was added successfully"
            },
            "reactedAt": {
              "type": "string",
              "format": "datetime",
              "description": "When the reaction was recorded"
            }
          }
        }
      },
      "errors": [
        { "name": "NotFound", "description": "Message or conversation not found" },
        { "name": "NotMember", "description": "User is not a member of the conversation" },
        { "name": "AlreadyReacted", "description": "User has already added this reaction to the message" }
      ]
    }
  }
}
