{
  "lexicon": 1,
  "id": "blue.catbird.mls.getOptInStatus",
  "description": "Check if users have opted into MLS chat",
  "defs": {
    "main": {
      "type": "query",
      "description": "Query opt-in status for a list of users. Returns array of status objects with DID, opt-in boolean, and optional timestamp.",
      "parameters": {
        "type": "params",
        "required": ["dids"],
        "properties": {
          "dids": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "did"
            },
            "description": "List of DIDs to check (max 100)",
            "maxLength": 100
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["statuses"],
          "properties": {
            "statuses": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#optInStatus"
              }
            }
          }
        }
      }
    },
    "optInStatus": {
      "type": "object",
      "required": ["did", "optedIn"],
      "properties": {
        "did": {
          "type": "string",
          "format": "did",
          "description": "User DID"
        },
        "optedIn": {
          "type": "boolean",
          "description": "Whether user has opted into MLS"
        },
        "optedInAt": {
          "type": "string",
          "format": "datetime",
          "description": "When user opted in (if applicable)"
        }
      }
    }
  }
}
