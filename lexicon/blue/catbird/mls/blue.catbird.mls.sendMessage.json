{
  "lexicon": 1,
  "id": "blue.catbird.mls.sendMessage",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Send an encrypted message to an MLS conversation",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convoId", "payload"],
          "properties": {
            "convoId": { "type": "string", "description": "Conversation identifier" },
            "payload": {
              "type": "ref",
              "ref": "blue.catbird.mls.defs#externalAsset",
              "description": "Pointer to the message ciphertext payload"
            },
            "contentType": {
              "type": "string",
              "description": "MIME type of the plaintext content",
              "default": "text/plain",
              "maxLength": 256
            },
            "attachments": {
              "type": "array",
              "items": { "type": "ref", "ref": "blue.catbird.mls.defs#externalAsset" },
              "description": "Attachment ciphertext payload pointers",
              "maxLength": 10
            },
            "replyUri": { "type": "string", "format": "at-uri", "description": "If reply, AT-URI of the message being replied to" }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["message"],
          "properties": {
            "message": { "type": "ref", "ref": "blue.catbird.mls.defs#messageView", "description": "Created message view" }
          }
        }
      },
      "errors": [
        { "name": "ConvoNotFound", "description": "Conversation not found" },
        { "name": "NotMember", "description": "Caller is not a member of the conversation" },
        { "name": "InvalidAsset", "description": "Payload or attachment pointer is invalid" },
        { "name": "EpochMismatch", "description": "Message epoch does not match current conversation epoch" },
        { "name": "MessageTooLarge", "description": "Message exceeds maximum size policy" }
      ]
    }
  }
}
