{
  "lexicon": 1,
  "id": "blue.catbird.mls.uploadBlob",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Upload a blob (file attachment) for use in MLS messages",
      "input": {
        "encoding": "*/*",
        "schema": {
          "type": "blob",
          "accept": ["*/*"],
          "maxSize": 52428800,
          "description": "Binary blob data (max 50MB)"
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["blob"],
          "properties": {
            "blob": {
              "type": "ref",
              "ref": "blue.catbird.mls.defs#blobRef",
              "description": "Reference to the uploaded blob"
            }
          }
        }
      },
      "errors": [
        {
          "name": "BlobTooLarge",
          "description": "Blob exceeds maximum size of 50MB"
        },
        {
          "name": "UnsupportedMimeType",
          "description": "MIME type is not supported"
        },
        {
          "name": "QuotaExceeded",
          "description": "User storage quota exceeded"
        }
      ]
    }
  }
}
