{
  "lexicon": 1,
  "id": "blue.catbird.mls.uploadBlob",
  "description": "Upload a blob (file attachment) for use in MLS conversations and messages",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Upload a blob for later reference in messages or metadata",
      "input": {
        "encoding": "*/*"
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["blob"],
          "properties": {
            "blob": {
              "type": "blob",
              "maxSize": 52428800
            }
          }
        }
      },
      "errors": [
        {
          "name": "BlobTooLarge",
          "description": "Blob exceeds maximum size of 50MB"
        },
        {
          "name": "QuotaExceeded",
          "description": "User storage quota exceeded"
        }
      ]
    }
  }
}
