{
    "lexicon": 1,
    "id": "blue.catbird.mls.getSubscriptionTicket",
    "defs": {
        "main": {
            "type": "procedure",
            "description": "Get a short-lived ticket for WebSocket subscription authentication. Call this via PDS proxy, then connect directly to the MLS DS WebSocket endpoint.",
            "input": {
                "encoding": "application/json",
                "schema": {
                    "type": "object",
                    "properties": {
                        "convoId": {
                            "type": "string",
                            "description": "Conversation ID to subscribe to"
                        }
                    }
                }
            },
            "output": {
                "encoding": "application/json",
                "schema": {
                    "type": "object",
                    "required": [
                        "ticket",
                        "endpoint",
                        "expiresAt"
                    ],
                    "properties": {
                        "ticket": {
                            "type": "string",
                            "description": "Short-lived JWT ticket for WebSocket authentication"
                        },
                        "endpoint": {
                            "type": "string",
                            "format": "uri",
                            "description": "WebSocket endpoint URL to connect to"
                        },
                        "expiresAt": {
                            "type": "string",
                            "format": "datetime",
                            "description": "Ticket expiration time (typically 30 seconds from issuance)"
                        }
                    }
                }
            },
            "errors": [
                {
                    "name": "NotMember",
                    "description": "User is not a member of the specified conversation"
                }
            ]
        }
    }
}