{
  "lexicon": 1,
  "id": "blue.catbird.mls.completePendingDeviceAddition",
  "description": "Mark a pending device addition as complete after successful addMembers",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Marks a claimed pending device addition as completed. Call this after successfully adding the device via addMembers.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["pendingAdditionId", "newEpoch"],
          "properties": {
            "pendingAdditionId": {
              "type": "string",
              "description": "ID of the pending addition to complete"
            },
            "newEpoch": {
              "type": "integer",
              "minimum": 0,
              "description": "New MLS epoch after the device was added"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["success"],
          "properties": {
            "success": {
              "type": "boolean",
              "description": "Whether the completion was recorded"
            }
          }
        }
      },
      "errors": [
        {
          "name": "NotFound",
          "description": "Pending addition not found"
        },
        {
          "name": "NotClaimed",
          "description": "Pending addition was not claimed by caller"
        }
      ]
    }
  }
}
