{
  "lexicon": 1,
  "id": "blue.catbird.mls.addMembers",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Add members to an existing MLS conversation",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convoId", "members"],
          "properties": {
            "convoId": {
              "type": "string",
              "description": "Conversation identifier"
            },
            "members": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "did"
              },
              "description": "DIDs of members to add",
              "minLength": 1,
              "maxLength": 50
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convo", "commit", "welcomeMessages"],
          "properties": {
            "convo": {
              "type": "ref",
              "ref": "blue.catbird.mls.defs#convoView",
              "description": "Updated conversation view"
            },
            "commit": {
              "type": "string",
              "description": "Base64-encoded MLS Commit message for existing members"
            },
            "welcomeMessages": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["did", "welcome"],
                "properties": {
                  "did": {
                    "type": "string",
                    "format": "did"
                  },
                  "welcome": {
                    "type": "string",
                    "description": "Base64-encoded MLS Welcome message"
                  }
                }
              },
              "description": "Welcome messages for new members"
            }
          }
        }
      },
      "errors": [
        {
          "name": "ConvoNotFound",
          "description": "Conversation not found"
        },
        {
          "name": "NotMember",
          "description": "Caller is not a member of the conversation"
        },
        {
          "name": "KeyPackageNotFound",
          "description": "Key package not found for one or more members"
        },
        {
          "name": "AlreadyMember",
          "description": "One or more DIDs are already members"
        },
        {
          "name": "TooManyMembers",
          "description": "Would exceed maximum member count"
        }
      ]
    }
  }
}
