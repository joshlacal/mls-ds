{
  "lexicon": 1,
  "id": "blue.catbird.mls.defs",
  "defs": {
    "convoView": {
      "type": "object",
      "required": ["id", "members", "createdAt", "createdBy", "unreadCount", "epoch"],
      "properties": {
        "id": { "type": "string" },
        "members": {
          "type": "array",
          "items": { "type": "ref", "ref": "#memberInfo" }
        },
        "createdAt": { "type": "string", "format": "datetime" },
        "createdBy": { "type": "string", "format": "did" },
        "unreadCount": { "type": "integer" },
        "epoch": { "type": "integer" },
        "title": { "type": "string", "maxLength": 100 }
      }
    },
    "memberInfo": {
      "type": "object",
      "required": ["did"],
      "properties": {
        "did": { "type": "string", "format": "did" }
      }
    },
    "messageView": {
      "type": "object",
      "required": ["id", "ciphertext", "epoch", "sender", "sentAt"],
      "properties": {
        "id": { "type": "string" },
        "ciphertext": { 
          "type": "string",
          "description": "Base64url encoded MLS PrivateMessage"
        },
        "epoch": { "type": "integer" },
        "sender": { "type": "ref", "ref": "#memberInfo" },
        "sentAt": { "type": "string", "format": "datetime" }
      }
    },
    "keyPackageInfo": {
      "type": "object",
      "required": ["did", "keyPackage", "cipherSuite"],
      "properties": {
        "did": { "type": "string", "format": "did" },
        "keyPackage": {
          "type": "string",
          "description": "Base64url encoded MLS KeyPackage"
        },
        "cipherSuite": { "type": "string" }
      }
    },
    "blobRef": {
      "type": "object",
      "required": ["cid", "size"],
      "properties": {
        "cid": { 
          "type": "string",
          "description": "Content identifier (SHA256 hash)" 
        },
        "size": { "type": "integer" }
      }
    }
  }
}
