# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/catbird

# Server Configuration
HOST=0.0.0.0
PORT=3000

# Cloudflare R2 Configuration (S3-compatible object storage)
# Get these from: https://dash.cloudflare.com/ -> R2 -> Manage R2 API Tokens
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_BUCKET=catbird-messages
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_REGION=auto

# SSE Configuration
SSE_BUFFER_SIZE=5000

# Logging
RUST_LOG=catbird_server=debug,tower_http=debug
